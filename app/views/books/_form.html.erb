<%= simple_form_for @book, :html => { :class => 'form-horizontal' } do |f| %>
  <div class= 'fieldd'>
    <%= f.input :name %>
    <%= f.input :description %>
  </div>
  <b>Authors</b>
  <%= collection_select(:author, :author_ids, Author.all, :id, :name,{:include_blank => 'None'},
{:multiple => true, :name=>'author_ids[]',:selected => 0,class: "form-control"}) %>
<br/>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                books_path, :class => 'btn btn-default' %>
<% end %>